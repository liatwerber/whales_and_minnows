<%= form_with(model: @course, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :description %>

    <%= f.text_field :description, class: "form-control" %>
  </div>

  <%= f.hidden_field :professor_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :course_name %>

    <%= f.text_field :course_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :quarter %>

    <%= f.text_field :quarter, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :course_time %>

    <%= f.text_field :course_time, class: "form-control" %>
  </div>

  <%= f.submit "Create course", class: "btn btn-block btn-outline-secondary" %>
<% end %>
