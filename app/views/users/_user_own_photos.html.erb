<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Own Photos

    <a data-toggle="collapse" href="#user_own_photos_new_form">
      Add course
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.own_photos.each do |course| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to course, course %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_own_photos_new_form">
        <%= render partial: "users/user_own_photos_new_form" %>
      </div>
    </div>

  </ul>
</div>
