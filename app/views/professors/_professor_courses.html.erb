<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Courses

    <a data-toggle="collapse" href="#professor_courses_new_form">
      Add course
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @professor.courses.each do |course| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to course, course %>

        <% if current_user == course.owner %>
          <%= link_to course, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="professor_courses_new_form">
        <%= render partial: "professors/professor_courses_new_form" %>
      </div>
    </div>

  </ul>
</div>
