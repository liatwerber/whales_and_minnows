<%= search_form_for @q, :class => collapse_search_form, :id => "courses_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :course_time_cont, "Course time contains" %>
    <%= f.text_field :course_time_cont, :class => "form-control", :placeholder => "Course time contains" %>
  </div>

  <div class="form-group">
    <%= f.label :quarter_cont, "Quarter contains" %>
    <%= f.text_field :quarter_cont, :class => "form-control", :placeholder => "Quarter contains" %>
  </div>

  <div class="form-group">
    <%= f.label :course_name_cont, "Course name contains" %>
    <%= f.text_field :course_name_cont, :class => "form-control", :placeholder => "Course name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :owner_username_cont, "Owner username contains" %>
    <%= f.text_field :owner_username_cont, :class => "form-control", :placeholder => "Owner username contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Bookmark Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='likesgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :likes_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Bookmark Created at greater than or equal to", :data => {:target => '#likesgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#likesgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='likeslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :likes_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Bookmark Created at less than or equal to", :data => {:target => '#likeslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#likeslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#likesgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#likeslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#likesgteqcreated_atPicker').on("dp.change", function (e) {
              $('#likeslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#likeslteqcreated_atPicker').on("dp.change", function (e) {
              $('#likesgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :comments_body_cont, "Comments body contains" %>
    <%= f.text_field :comments_body_cont, :class => "form-control", :placeholder => "Comments body contains" %>
  </div>

  <div class="form-group">
    <%= f.label :professor_professor_name_cont, "Professor professor_name contains" %>
    <%= f.text_field :professor_professor_name_cont, :class => "form-control", :placeholder => "Professor professor_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :fans_username_cont, "Fans username contains" %>
    <%= f.text_field :fans_username_cont, :class => "form-control", :placeholder => "Fans username contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/courses" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#courses_filters">
  Show filters
</a>
