<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Comments

    <a data-toggle="collapse" href="#course_comments_new_form">
      Add review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @course.comments.each do |review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to review, review %>

        <% if current_user == review.commenter %>
          <%= link_to review, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="course_comments_new_form">
        <%= render partial: "courses/course_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>
